generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//-----------------------------------------------------------------//
// Author: Krish
// status: Open
model Employee {
  id                    Int                   @id @default(autoincrement())
  emp_office_details    EmployeeOfficeDetails @relation(fields: [emp_office_details_id], references: [id])
  emp_office_details_id Int
  emp_basic_details     EmployeeBasicDetails  @relation(fields: [emp_basic_details_id], references: [id])
  emp_basic_details_id  Int
}

model EmployeeOfficeDetails {
  id              Int        @id @default(autoincrement())
  office_name     String
  office_code     String
  ddo_designation String
  ddo_code        String
  district        String
  Employee        Employee[]
}

model EmployeeBasicDetails {
  id                  Int        @id @default(autoincrement())
  emp_image           String
  emp_name            String
  mode_of_recruitment String // Assuming you want to store it as a string, adjust as needed
  contact_no          String
  emg_contact_no      String
  aadhar_no           Int
  epic_no             String
  gender              String // Assuming you want to store it as a string, adjust as needed
  pran                String
  emp_type            String // Assuming you want to store it as a string, adjust as needed
  weight              Float
  height              Float
  cps                 String
  gps                 String
  dob                 String
  Employee            Employee[]
}

